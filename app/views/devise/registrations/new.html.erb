<% provide(:title, "Sign up") %>

<% content_for :stylesheet do %>
	<%= stylesheet_link_tag "login", media: "all" %>
	<%= stylesheet_link_tag "util", media: "all" %>
<% end %>

<% content_for :content do%>
    <div id="colorlib-page">
		  <div id="colorlib-main">
		    <div class="limiter">
      		<div class="container-login100">
      			<div class="wrap-login100 p-l-50 p-r-50 p-t-77 p-b-30">
      			  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "login100-form") do |f| %>
      			  
      					<span class="login100-form-title p-b-55">
      						Sign up
      					</span>
      					
      					<%= devise_error_messages! %>
      
      					<div class="wrap-input100 m-b-16">
      					  <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "input100" %>
      						<span class="focus-input100"></span>
      						<span class="symbol-input100">
      							<span class="fa fa-envelope"></span>
      						</span>
      					</div>
      
      					<div class="wrap-input100 m-b-16">
      					  <%= f.password_field :password, placeholder: "Password", class: "input100" %>
      						<span class="focus-input100"></span>
      						<span class="symbol-input100">
      							<span class="fa fa-lock"></span>
      						</span>
      					</div>
      					
      					<div class="wrap-input100 m-b-16">
      					  <%= f.password_field :password_confirmation, placeholder: "Password confirmation", class: "input100" %>
      						<span class="focus-input100"></span>
      						<span class="symbol-input100">
      							<span class="fa fa-lock"></span>
      						</span>
      					</div>

      					<div class="container-login100-form-btn p-t-25">
      					  <%= f.submit "Sign up", class: "login100-form-btn" %>
      					</div>
      
      					<div class="text-center w-full p-t-115">
                  <%= link_to "Back to log in", new_user_session_path, class: "txt1 bo1 hov1" %>
      					</div>
			        <% end %>
      			</div>
      		</div>
      	</div>
			</div>			
		</div>
<% end %>
